<div class="content max-w-4xl mx-auto mt-10">
  <div class="bg-white rounded-2xl shadow-lg">
    <div class="flex justify-between items-center px-6 py-4 border-b border-gray-200">
      <h2 class="text-2xl font-bold">
        <%= client.new_record? ? "Novo Cliente" : "Editar Cliente" %>
      </h2>
      <%= link_to "Voltar", client, class: "bg-yellow-400 text-white px-3 py-1 rounded hover:bg-yellow-500 transition-colors text-sm font-medium" %>
    </div>

    <div class="p-6">
      <%= form_with(model: client, local: true) do |form| %>

        <% if client.errors.any? %>
          <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded mb-4">
            <h4 class="font-semibold mb-2">
              <%= pluralize(client.errors.count, "erro") %> impediram este cliente de ser salvo:
            </h4>
            <ul class="list-disc list-inside">
              <% client.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Upload de imagem -->
        <div class="mb-6">
          <% if client.client_image.attached? %>
            <div class="mt-4">
              <%= image_tag client.client_image, class: "rounded-full shadow w-38 h-38 object-cover" %>
            </div>
          <% else %>
            <div class="mt-4">
              <img src="/images/no-image.jpg" alt="Sem imagem" class="rounded-full shadow w-24 h-24 object-cover">
            </div>
          <% end %>
           <label class="block mb-2 font-medium text-gray-700" for="client_client_image">Foto do Cliente (50x50)</label>
          <%= form.file_field :client_image, accept: "image/*", class: "block w-full text-sm text-gray-600 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-100 file:text-blue-700 hover:file:bg-blue-200" %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block mb-1 font-medium text-gray-700" for="client_name">Nome</label>
            <%= form.text_field :name, class: "w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
          </div>

          <div>
            <label class="block mb-1 font-medium text-gray-700" for="client_birthdate">Data de Nascimento</label>
            <%= form.date_field :birthdate, class: "w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
          </div>

          <div data-controller="mask-phone" class="col-span-6 md:col-span-2">
            <label class="block mb-1 font-medium text-gray-700" for="client_phone">Telefone</label>
            <%= form.text_field :phone, placeholder: "(00) 0 0000-0000",  class: "w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-400", data: { "mask-phone-target": "input" } %>
          </div>

          <div class="md:col-span-2">
            <label class="block mb-1 font-medium text-gray-700" for="client_description">Descrição</label>
            <%= form.text_area :description, class: "w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-400 resize-none" %>
          </div>

          <div class="flex items-center gap-2">
            <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <label class="font-medium text-gray-700" for="client_active">Ativo?</label>
          </div>
        </div>

        <div class="mt-6">
          <%= form.submit client.new_record? ? "Criar Cliente" : "Atualizar Cliente", class: "w-full bg-blue-600 text-white font-semibold py-2 rounded-md hover:bg-blue-700 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
