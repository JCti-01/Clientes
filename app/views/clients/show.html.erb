<div class="content max-w-4xl mx-auto mt-10">
  <% if notice %>
    <div class="bg-green-50 border border-green-200 text-green-700 p-4 rounded mb-6">
      <p><%= notice %></p>
    </div>
  <% end %>

  <div class="mb-3">
    <%= link_to "Voltar", clients_path, class: "px-3 py-1 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 transition-colors" %>
  </div>

  <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
    <div class="flex justify-between items-center mb-4">
      <div class="flex gap-2 items-center">
        <h2 class="text-2xl font-bold"><%= @client.name %></h2>
        <span class="h-4 w-4 rounded-full inline-block <%= @client.active ? 'bg-green-500' : 'bg-red-500' %>"></span>
      </div>

      <div class="flex gap-2">
        <%= link_to "Editar Cliente", edit_client_path(@client), class: "px-3 py-1 bg-yellow-400 text-white rounded hover:bg-yellow-500 transition-colors" %>
        <button onclick="openModal('delete-client-modal')" class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700 transition-colors">
          Deletar
        </button>
      </div>
    </div>

    <div class="flex gap-3 items-center">
      <% if @client.client_image.attached? %>
        <div class="mt-4">
          <%= image_tag @client.client_image, class: "rounded-full shadow w-38 h-38 object-cover" %>
        </div>
      <% end %>

      <div>
        <p class="text-gray-700"><strong>Data de Nascimento:</strong> <%= @client.birthdate %></p>
        <p class="text-gray-700"><strong>Telefone:</strong> <%= @client.phone %></p>
        <p class="text-gray-700"><strong>Descrição:</strong> <%= @client.description %></p>
      </div>
    </div>
  </div>

  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-bold">Endereços</h2>
    <%= link_to "Novo Endereço", new_client_client_address_path(@client), class: "px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors" %>
  </div>

  <div class="mb-6">
    <input 
      id="address-search" 
      type="text" 
      placeholder="Pesquisar endereço, cidade ou CEP..."
      class="w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
      onkeyup="filterAddresses()"
    >
  </div>

  <div id="address-list" class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% @client.client_addresses.each do |address| %>
      <div 
        class="p-4 border rounded-2xl shadow hover:shadow-lg transition-shadow relative address-card"
        data-search="<%= [address.address, address.city, address.state, address.zip, address.reference].join(' ').downcase %>">
        
        <span class="absolute top-3 right-3 h-3 w-3 rounded-full <%= address.active ? 'bg-green-500' : 'bg-red-500' %>"></span>
        <p><strong>Endereço:</strong> <%= address.address %>, <%= address.number %></p>
        <p><strong>Cidade:</strong> <%= address.city %> - <%= address.state %></p>
        <p><strong>CEP:</strong> <%= address.zip %></p>
        <p><strong>Referência:</strong> <%= address.reference %></p>

        <div class="flex gap-2 mt-4">
          <%= link_to "Editar", edit_client_client_address_path(@client, address), class: "px-2 py-1 bg-yellow-400 text-white rounded hover:bg-yellow-500 transition-colors text-sm" %>
          <button onclick="openModal('delete-address-modal-<%= address.id %>')" class="px-2 py-1 bg-red-600 text-white rounded hover:bg-red-700 transition-colors text-sm">
            Deletar
          </button>
        </div>
      </div>

      <div id="delete-address-modal-<%= address.id %>" class="fixed inset-0 hidden bg-black/50 items-center justify-center z-50">
        <div class="bg-white rounded-lg shadow-lg p-6 w-96 transform transition-transform scale-100">
          <h3 class="text-lg font-bold mb-4 text-gray-800">Confirmar exclusão</h3>
          <p class="text-gray-600 mb-6">Tem certeza que deseja deletar este endereço?</p>
          <div class="flex justify-end gap-3">
            <button onclick="closeModal('delete-address-modal-<%= address.id %>')" class="px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 transition">Cancelar</button>
            <%= button_to "Confirmar", client_client_address_path(@client, address), method: :delete, class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="delete-client-modal" class="fixed inset-0 hidden bg-black/50 items-center justify-center z-50">
  <div class="bg-white rounded-lg shadow-lg p-6 w-96 transform transition-transform scale-100">
    <h3 class="text-lg font-bold mb-4 text-gray-800">Excluir cliente</h3>
    <p class="text-gray-600 mb-6">Tem certeza que deseja deletar o cliente <%= @client.name %>?</p>
    <div class="flex justify-end gap-3">
      <button onclick="closeModal('delete-client-modal')" class="px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 transition">Cancelar</button>
      <%= button_to "Confirmar", @client, method: :delete, class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition" %>
    </div>
  </div>
</div>

<script>
  function openModal(id) {
    const modal = document.getElementById(id);
    modal.classList.remove("hidden");
    modal.classList.add("flex");
  }

  function closeModal(id) {
    const modal = document.getElementById(id);
    modal.classList.remove("flex");
    modal.classList.add("hidden");
  }

  document.addEventListener("click", function(e) {
    if (e.target.classList.contains("bg-black/50")) {
      e.target.classList.add("hidden");
      e.target.classList.remove("flex");
    }
  });

  function filterAddresses() {
    const query = document.getElementById("address-search").value.toLowerCase();
    const cards = document.querySelectorAll(".address-card");

    cards.forEach(card => {
      const searchable = card.dataset.search;
      if (searchable.includes(query)) {
        card.classList.remove("hidden");
      } else {
        card.classList.add("hidden");
      }
    });
  }
</script>
