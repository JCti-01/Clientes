<p class="text-green-600 mb-4"><%= notice %></p>

<% content_for :title, "Clients" %>

<div class="content">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold text-gray-800">Clientes</h2>
    <%= link_to "Novo Cliente", new_client_path, class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg shadow hover:bg-blue-700 transition" %>
  </div>

  <%= form_with url: clients_path, method: :get, data: { turbo_frame: "clients-list" }, class: "mb-6 flex gap-2" do |form| %>
    <%= form.text_field :query, value: params[:query], placeholder: "Pesquisar cliente...",
        class: "border border-gray-300 rounded-lg p-2 flex-1 focus:ring focus:ring-blue-300" %>
    <%= form.submit "Buscar", class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition" %>
  <% end %>

  <turbo-frame id="clients-list">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @clients.each do |client| %>
        <div class="relative bg-white shadow rounded-xl p-5 border border-gray-200 hover:shadow-lg transition">

          <div class="absolute top-3 right-3 group">
            <% if client.active? %>
              <div class="w-4 h-4 rounded-full bg-green-500 border-2 border-white shadow-md" title="Ativo"></div>
            <% else %>
              <div class="w-4 h-4 rounded-full bg-red-500 border-2 border-white shadow-md" title="Inativo"></div>
            <% end %>
          </div>

          <div class="flex flex-col items-center text-center">
            <% if client.client_image.attached? %>
              <%= image_tag client.client_image, class: "rounded-full shadow w-24 h-24 object-cover mb-3" %>
            <% else %>
              <div class="w-24 h-24 mb-3 rounded-full bg-gray-200 flex items-center justify-center text-gray-500">
                <i class="fas fa-user text-2xl"></i>
              </div>
            <% end %>

            <h3 class="text-lg font-semibold text-gray-800 mb-1"><%= client.name %></h3>
            <p class="text-gray-500 text-sm mb-3"><%= client.phone.presence || "Telefone nÃ£o informado" %></p>
            <%= link_to "Ver detalhes", client_path(client), data: { turbo: false }, class: "text-blue-600 hover:text-blue-800 font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </turbo-frame>
</div>
